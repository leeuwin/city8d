.mbk-dialog-box {
  position: fixed;
  width: 100%;
  height: 100%;
  left: 0;
  top: 0;
  background: rgba(0, 0, 0, 0.4);
  z-index: 9;
}

.mbk-dialog-container {
  box-sizing: border-box;
  position: absolute;
  width: 500rpx;
  height: 580rpx;
  padding: 50rpx;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  margin: auto;
  background-color: #fff;
  border-radius: 8rpx;
  z-index: 9;
}

.mbk-dialog-content {
  height: 168rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  line-height: 38rpx;
  text-align: center;
  color: #9c9c9c;
}

.mbk-dialog-header .logo-img {
  height: 240rpx;
}

.mbk-dialog-btns .button-icon {
  display: inline-block;
  vertical-align: middle;
  width: 30px;
  height: 30px;
  margin-right: 8px;
}

.mbk-dialog-btns .button-text {
  vertical-align: middle;
}
