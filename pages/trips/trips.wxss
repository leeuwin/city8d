@import "../../template/publish-tips/publish-tips.wxss";
@import "../publish/publish.wxss";

.trips-navbar {
  left: 0;
  top: 0;
  width: 98%;
  margin-right: 1%;
  margin-left: 1%;
  margin-top: 0;
  background-color: #fff;
  position: fixed;
  z-index: 1;
  font-size: 34rpx;
}
.trips-tab__panel{
  margin-top: 250rpx;
}
.trips-navbar .weui-navbar__item {
  padding: 38rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.trips-navbar .weui-navbar__item_on .weui-navbar__title {
  background-color: #028e6c;
  border-radius: 60rpx;
  color: #fff;
}

.trips-navbar .weui-navbar__title {
  font-size: 26rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0 50rpx;
  color: #b9d6c1;
}

.trip-list {
  padding: 48rpx 20rpx 20rpx;
}

.picker{
  text-align: right;
}

.my-btn-area{
  display: flex;
}
.my-btn{
  margin-left: 10rpx;
  display: flex;
  flex-direction: row;
}
