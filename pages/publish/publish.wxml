<mp-toptips msg="{{error}}" type="error" show="{{error}}">
</mp-toptips>
<view class='page'>
  <view class="page__bd">
    <mp-form id="form" rules="{{rules}}" models="{{formData}}">
      <mp-cells title="请您选择起始点" footer="">
        <mp-cell show-error prop="phone" ext-class="">
          <image slot="icon" src="/images/icon/from.png" style="margin-right: 16px;vertical-align: middle;width:20px; height: 20px;"></image>
          <input id="phone" bindinput="bindKeyInput" data-field="mobile" class="weui-input" placeholder="从哪出发" type="text" />
        </mp-cell>
        <mp-cell show-error prop="vcode" ext-class="">
          <image slot="icon" src="/images/icon/through.png" style="margin-right: 16px;vertical-align: middle;width:20px; height: 20px;"></image>
          <input id="vcode" bindinput="bindKeyInput" data-field="vcode" class="weui-input" placeholder="途经(选城市端出入口地标)" type="text" />
        </mp-cell>
        <mp-cell show-error prop="phone" ext-class="">
          <image slot="icon" src="/images/icon/dest.png" style="margin-right: 16px;vertical-align: middle;width:20px; height: 20px;"></image>
          <input id="p" bindinput="bindKeyInput" data-field="mobile" class="weui-input" placeholder="要到哪去 " type="text" />
        </mp-cell>
      </mp-cells>

      <mp-cells title="请您补充其他信息" footer="">
        <mp-cell show-error prop="phone" ext-class="">
          <image slot="icon" src="/images/icon/date.png" style="margin-right: 16px;vertical-align: middle;width:20px; height: 20px;"></image>
          <input id="phone" bindinput="bindKeyInput" data-field="mobile" class="weui-input" placeholder="出行日期" type="text" />
        </mp-cell>
        <mp-cell show-error prop="phone" ext-class="">
          <image slot="icon" src="/images/icon/time.png" style="margin-right: 16px;vertical-align: middle;width:20px; height: 20px;"></image>
          <view style="display:flex">
            <input id="phone" bindinput="bindKeyInput" data-field="mobile" class="weui-input" placeholder="最早时间" type="text" />
            <image src="/images/icon/to-right.png" style="margin-right:16px;vertical-align: middle;width:40px; height: 20px;"></image>
            <input id="vcode" bindinput="bindKeyInput" data-field="vcode" class="weui-input" placeholder="最迟时间" type="text" />
          </view>
        </mp-cell>
        <mp-cell show-error prop="phone" ext-class="">
          <image slot="icon" src="/images/icon/person.png" style="margin-right: 16px;vertical-align: middle;width:20px; height: 20px;"></image>
          <view style="display:flex">
            <input id="phone" bindinput="bindKeyInput" data-field="mobile" class="weui-input" placeholder="剩余座位" type="text" />
            <image src="/images/icon/price.png" style="margin-right: 16px;vertical-align: middle;width:35px; height: 20px;"></image>
            <input id="vcode" bindinput="bindKeyInput" data-field="vcode" class="weui-input" placeholder="单座价格" type="text" />
          </view>
        </mp-cell>
        <mp-cell show-error prop="phone" ext-class="weui-cell_vcode">
          <checkbox class="weui-input">为他人携带顺路快件？</checkbox>
          <view slot="footer" class="weui-vcode-btn">详情</view>
        </mp-cell>
      </mp-cells>
      <mp-cells title="请记住邀请码，且仅提供给您准许上车的乘客" footer="说明：验证码【保护您】发布的信息不被恶意消耗下架，只有电话咨询您并【得到您许可才告知其验证码】，乘客拿到验证码后加入你的行程，他将补充【位置信息】和【真实电话】，系统将会统一展示，方便您安排、通知行程">
        <mp-cell show-error prop="phone" ext-class="">
          <image slot="icon" src="/images/icon/key.png" style="margin-right: 16px;vertical-align: middle;width:20px; height: 20px;"></image>
          <input id="phone" bindinput="bindKeyInput" data-field="mobile" class="weui-input" placeholder="验证码" type="number" />
        </mp-cell>
      </mp-cells>

    </mp-form>
    <view class="weui-btn-area">
      <button class="weui-btn" type="primary" bindtap="submitForm">马上发布</button>
      <button class="weui-btn" type="default" bindtap="cancelForm">重新填写</button>
    </view>
  </view>
</view>