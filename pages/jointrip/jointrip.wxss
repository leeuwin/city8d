/*全局样式*/
page {
padding: 20px 0;
}
/*主容器*/
.stepper {
width:114px;
height:36px;
margin: 0 2px;
border: 1px solid #ccc;
border-radius: 3px;
}
/*加号和减号*/
.stepper text {
float: left;
width: 36px;
line-height: 36px;
text-align: center;
font-size: 26px;
}
/*数值*/
.stepper input {
width: 40px;
height: 36px;
float: left;
margin: 0 auto;
text-align: center;
font-size: 18px;
border-left: 1px solid #ccc;
border-right: 1px solid #ccc;
}
/*普通样式*/
.stepper .normal {
color:black;
}
/*禁用样式*/
.stepper .disable {
color: #ccc;
}